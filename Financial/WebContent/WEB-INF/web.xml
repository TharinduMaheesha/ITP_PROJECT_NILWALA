<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://java.sun.com/xml/ns/javaee" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		id="WebApp_ID" version="3.0">

<servlet>
<servlet-name>viewCartServlet</servlet-name>
<servlet-class>com.servlet.viewCartServlet</servlet-class>
</servlet>
		
<servlet-mapping>
<servlet-name>viewCartServlet</servlet-name>
<url-pattern>/user</url-pattern>
</servlet-mapping>



<servlet>
<servlet-name>AddSalarySev</servlet-name>
<servlet-class>com.servlet.AddSalarySev</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>AddSalarySev</servlet-name>
<url-pattern>/AddSalarySev</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>EnterPayDeSev</servlet-name>
<servlet-class>com.servlet.EnterPayDeSev</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>EnterPayDeSev</servlet-name>
<url-pattern>/EnterPayDeSev</url-pattern>
</servlet-mapping>

 <error-page>   
  <exception-type>java.lang.NullPointerException</exception-type>   
  <location>/cart.jsp</location>   
  </error-page> 

</web-app>
</element>	